<Task xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="MlTask.xsd">
  <Evaluation>
    <DataSplit>
      <partitionRate>0.8</partitionRate>
    </DataSplit>
    <Resampling>
      <Bootstrap>
        <number>10</number>
      </Bootstrap>
    </Resampling>
    <Metric>Accuracy</Metric>
  </Evaluation>
  <DataSpecification>
    <predictedVariable>
      <name>Species</name>
      <VariableType>factor</VariableType>
    </predictedVariable>
    <Predictors>
      <predictor>
        <name>Sepal.Length</name>
        <VariableType>numeric</VariableType>
      </predictor>
      <predictor>
        <name>Sepal.Width</name>
        <VariableType>numeric</VariableType>
      </predictor>
      <predictor>
        <name>Petal.Length</name>
        <VariableType>numeric</VariableType>
      </predictor>
      <predictor>
        <name>Petal.Width</name>
        <VariableType>numeric</VariableType>
      </predictor>
    </Predictors>
  </DataSpecification>
  <Preprocessing>
    <PreprocessMethod>center</PreprocessMethod>
  </Preprocessing>
  <Method>
    <MultiLayerPerceptron>
      <hiddenUnits>
        <value>1</value>
        <value>3</value>
        <value>5</value>
      </hiddenUnits>
      <weightDecay>
        <value>0</value>
        <value>1e-04</value>
        <value>0.1</value>
      </weightDecay>
    </MultiLayerPerceptron>
  </Method>
</Task>