<Task xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="MlTask.xsd">
  <DataSpecification>
    <predictedVariable>
      <name>Species</name>
      <VariableType>factor</VariableType>
    </predictedVariable>
    <Predictors>
      <predictor>
        <name>Sepal.Length</name>
        <VariableType>numeric</VariableType>
      </predictor>
      <predictor>
        <name>Sepal.Width</name>
        <VariableType>numeric</VariableType>
      </predictor>
      <predictor>
        <name>Petal.Length</name>
        <VariableType>numeric</VariableType>
      </predictor>
      <predictor>
        <name>Petal.Width</name>
        <VariableType>numeric</VariableType>
      </predictor>
    </Predictors>
  </DataSpecification>
  <Preprocessing>
    <PreprocessMethod>center</PreprocessMethod>
    <PreprocessMethod>scale</PreprocessMethod>
  </Preprocessing>
  <Evaluation>
    <Resampling>
      <CrossValidation>
        <numberSubsets>10</numberSubsets>
        <repeats>3</repeats>
      </CrossValidation>
    </Resampling>
    <Metric>Accuracy</Metric>
  </Evaluation>
  <Method>
    <StochasticGradientBoosting>
      <numberTrees>
        <value>50</value>
        <value>100</value>
        <value>150</value>
      </numberTrees>
      <maxTreeDepth>
        <value>1</value>
        <value>2</value>
        <value>3</value>
      </maxTreeDepth>
      <shrinkage>
        <value>0.1</value>
      </shrinkage>
      <minTerminalNodeSize>
        <value>10</value>
      </minTerminalNodeSize>
    </StochasticGradientBoosting>
  </Method>
</Task>